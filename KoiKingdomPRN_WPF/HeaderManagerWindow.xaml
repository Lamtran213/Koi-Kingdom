<UserControl x:Class="KoiKingdomPRN_WPF.HeaderManagerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoiKingdomPRN_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#FF2D2D30" Margin="10">
            <Button Content="Home" Margin="5" FontSize="16"/>
            <Button Content="Customer" Margin="5" FontSize="16" Click="Customer_Click"/>
            <Button Content="Employee" Margin="5" FontSize="16"/>
            <Button Content="Tour Package" Margin="5" FontSize="16"/>
            <Button Content="+ Add Tour Package" Margin="5" FontSize="16"/>
            <Button Content="+ Add Employee" Margin="5" FontSize="16"/>
            <Button Content="Profile" Margin="5" FontSize="16"/>
            <Button Content="Logout" Margin="5" FontSize="16"/>
        </StackPanel>

        <!-- Main Content -->   
    </Grid>
</UserControl>
