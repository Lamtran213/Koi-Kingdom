<Window x:Class="KoiKingdomPRN_WPF.TourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TourWindow" Height="500" Width="900">
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TourItemsControl" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                        <!-- Thiết lập số cột là 3 -->
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10">

                            <Button Background="Transparent" Tag="{Binding TourID}" BorderThickness="0" Padding="0" Click="TourButton_Click">
                                <StackPanel>
                                    <Image Source="{Binding ImageSource}" Height="150" Stretch="Fill"/>
                                    <!-- Details -->
                                    <StackPanel Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                                            <TextBlock Text="{Binding Rating}" FontSize="14" Margin="5,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding TourId}" Margin="0,5"/>
                                        <TextBlock Text="{Binding Duration}" Margin="0,5"/>
                                        <TextBlock Text="{Binding StartDate, StringFormat='Start Date: {0:dd-MM-yyyy}'}" Margin="0,5"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='End Date: {0:dd-MM-yyyy}'}" Margin="0,5"/>
                                        <TextBlock Text="{Binding Farms}" Margin="0,5"/>
                                        <TextBlock Text="{Binding KoiTypes}" Margin="0,5"/>
                                        <TextBlock Text="{Binding DepartureLocation}" Margin="0,5"/>
                                        <TextBlock Text="{Binding TourPrice, StringFormat='Price: {0} $'}" FontWeight="Bold" FontSize="18" Foreground="Red" HorizontalAlignment="Right" Margin="0,5"/>
                                        <TextBlock Text="{Binding TourID}" Margin="0,5" FontStyle="Italic" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
