<UserControl x:Class="KoiKingdomPRN_WPF.HeaderConsultingWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoiKingdomPRN_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#FF2D2D30" Margin="10">
            <Button Content="Home" Margin="5" FontSize="16" Click="Home_Click"/>
            <Button Margin="5" FontSize="16" Click="Tour_Detail_Management_Click" Height="54">
                <StackPanel>
                    <TextBlock Text="Tour Detail" TextAlignment="Center"/>
                    <TextBlock Text="Management" TextAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Content="Create Koi Order" Margin="5" FontSize="16" Click="Create_Koi_Order_Click"/>
            <Button Content="Logout" Margin="5" FontSize="16" Click="Button_Click"/>
        </StackPanel>

        <!-- Main Content -->
    </Grid>
</UserControl>
